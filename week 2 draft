#include <stdio.h>
#include <stdlib.h>

#define minBeans 8
#define MinQuantityWater 30
#define milkMin_C 70
#define milkMin_M 160
#define syrupMin_M 30


float itemPriceA = 3.5;
int itemQuantityA = 8;
char itemNameA = 'E';

float itemPriceB = 4.5;
int itemQuantityB = 15;
char itemNameB = 'C';

float itemPriceC = 5.5;
int itemQuantityC = 8;
char itemNameC = 'M';

int adminPassword = 7777;

/* Sales total */
float totalSales = 0.0;

/*Function prototypes */
void displayMenu();
void purchaseCoffee();
void adminMode();
void replenishItems();
void changeItemPrices();
void totalAmount();


int main() {
    int choice;

    while (1) {             /* 1 indicates infinite loop */
        displayMenu();
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                purchaseCoffee();
                break;
            case 2:
                adminMode();
                break;
            case 3:
                printf("Exiting the machine.\n");
                exit(0);
            default:
                printf("Invalid choice. Try again.\n");
        }
    }

    return 0;
}

void displayMenu() {
    printf("Main Menu\n");
    printf("1. Purchase Item\n");
    printf("2. Admin Mode\n");
    printf("3. Exit\n");
    printf("Enter your option number: ");
}

void purchaseCoffee() {
    int itemChoice;
    float itemPrice;
    int itemQuantity;
    char itemName;

    printf("Available Items:\n");
    printf("1. Espresso - $%.2f (Qty: %d g)\n", itemPriceA, itemQuantityA);
    printf("2. Cappucino - $%.2f (Qty: %d g)\n", itemPriceB, itemQuantityB);
    printf("3. Mocha - $%.2f (Qty: %d g)\n", itemPriceC, itemQuantityC);
    printf("Enter your item number (0 to cancel): ");
    scanf("%d", &itemChoice);

    switch (itemChoice) {
        case 1:
            itemPrice = itemPriceA;
            itemQuantity = &itemQuantityA;
            itemName = itemNameA;
            break;
        case 2:
            itemPrice = itemPriceB;
            itemQuantity = &itemQuantityB;
            itemName = itemNameB;
            break;
        case 3:
            itemPrice = itemPriceC;
            itemQuantity = &itemQuantityC;
            itemName = itemNameC;
            break;
        case 0:
            printf("Purchase canceled.\n");
            return;
        default:
            printf("Invalid item choice.\n");
            return;
    }

    printf("You selected Item %c - $%.2f\n", itemName, itemPrice);

    float givenAmount = 0.0;
    float coin;

    while (givenAmount < itemPrice) {
        printf("Insert a coin (1, 0.5, 0.25 Dh) or 0 to cancel: ");
        scanf("%f", &coin);

        if (coin == 1 || coin == 0.5 || coin == 0.25) {
            givenAmount += coin;
        } else if (coin == 0) {
            printf("Purchase canceled.\n");
            return;
        } else {
            printf("Invalid coin. Try again.\n");
        }
    }

    int itemQuantity = 1;
    totalSales += itemPrice;

    printf("You purchased Item %c for $%.2f. Change: $%.2f\n", itemName, itemPrice, givenAmount - itemPrice);

    if (itemQuantity <= minBeans) {
        printf("Alert: Low amount of coffee beans %c!\n", itemName);
        /*#define minBeans 8
        #define MinQuantityWater 30
        #define milkMin_C 70
        #define milkMin_M 160
        #define syrupMin_M 30
*/
    }

}

void adminMode() {
    int password;
    printf("Enter the admin password: ");
    scanf("%d", &password);

    if (password != adminPassword) {
        printf("Incorrect admin password. Exiting Admin Mode.\n");
        return;
    }

    int adminChoice;
    
    while (1) {
        printf("Admin Menu\n");
        printf("1. Replenish Items\n");
        printf("2. Change Item Prices\n");
        printf("3. Display Total Sale\n");
        printf("4. Display Item Availability\n");
        printf("0. Exit Admin Mode\n");
        printf("Enter your option number: ");
        scanf("%d", &adminChoice);

        switch (adminChoice) {
            case 1:
                replenishItems();
                break;
            case 2:
                changeItemPrices();
                break;
            case 3:
                totalAmount();
                break;
            case 0:
                printf("Exiting Admin Mode.\n");
                return;
            default:
                printf("Invalid number. Please try again.\n");
        }
    }
}

void replenishItems() {
    
    int replenishAmountA = 20 - itemQuantityA;
    int replenishAmountB = 20 - itemQuantityB;
    int replenishAmountC = 20 - itemQuantityC;

    if (replenishAmountA > 0) {
        itemQuantityA += rand() % (replenishAmountA + 1);
    }
    
    if (replenishAmountB > 0) {
        itemQuantityB += rand() % (replenishAmountB + 1);
    }
    
    if (replenishAmountC > 0) {
        itemQuantityC += rand() % (replenishAmountC + 1);
    }

        printf("Item quantities replenished.\n");
    
}

void changeItemPrices() {
    printf("Enter the new price for Item %c: ", itemNameA);
    scanf("%f", &itemPriceA);
    printf("Enter the new price for Item %c: ", itemNameB);
    scanf("%f", &itemPriceB);
    printf("Enter the new price for Item %c: ", itemNameC);
    scanf("%f", &itemPriceC);
    printf("Item prices updated.\n");
}

void totalAmount() {
    printf("Total Sales: $%.2f\n", totalSales);
    int resetTotal;
    printf("Would you like to reset the total sale to zero? (1 for Yes, 0 for No): ");
    scanf("%d", &resetTotal);

    if (resetTotal == 1) {
        totalSales = 0.0;
        printf("Total sales reseted to zero. Please collect your money from below.\n");
    }
}
