#include <stdio.h>
#include <stdlib.h>

#define minBeans 8
#define MinQuantityWater 30
#define milkMin_C 70
#define milkMin_M 160
#define syrupMin_M 30


float itemPriceA = 3.5;
int itemQuantityA = 8;
char itemNameA = 'E';

float itemPriceB = 4.5;
int itemQuantityB = 15;
char itemNameB = 'C';

float itemPriceC = 5.5;
int itemQuantityC = 8;
char itemNameC = 'M';

int adminPassword = 7777;

/* Sales total */
float totalSales = 0.0;

/*Function prototypes */
void displayMenu();
void purchaseCoffee();
void adminMode();
void replenishItems();
void changeItemPrices();
void totalAmount();


int main() {
    int choice;

    while (1) {             /* 1 indicates infinite loop */
        displayMenu();
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                purchaseCoffee();
                break;
            case 2:
                adminMode();
                break;
            case 3:
                printf("Exiting the machine.\n");
                exit(0);
            default:
                printf("Invalid choice. Try again.\n");
        }
    }

    return 0;
}

void displayMenu() {
    printf("Main Menu\n");
    printf("1. Purchase Item\n");
    printf("2. Admin Mode\n");
    printf("3. Exit\n");
    printf("Enter your option number: ");
}

void purchaseCoffee() {
    int itemChoice;
    float itemPrice;
    int itemQuantity;
    char itemName;

    printf("Available Items:\n");
    printf("1. Espresso - $%.2f (Qty: %d g)\n", itemPriceA, itemQuantityA);
    printf("2. Cappucino - $%.2f (Qty: %d g)\n", itemPriceB, itemQuantityB);
    printf("3. Mocha - $%.2f (Qty: %d g)\n", itemPriceC, itemQuantityC);
    printf("Enter your item number (0 to cancel): ");
    scanf("%d", &itemChoice);

}
